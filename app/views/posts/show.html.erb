<div class="main posts-show">
  <div class="container">
    <div class="posts-show-item">
      <div class="post-user-name">
        <div class="posts-show-item-image">
          <img src="<%= "/user_images/#{@post.user.icon_image}" %>">
          <%= link_to(@post.user.name, "/users/#{@post.user.id}") %>
        </div>
      </div>
      <h2>
        <%= @post.title %>
      </h2>
      <div class="post-show-image">
          <% if @post.post_image %>
          <%= link_to("/posts/#{@post.id}") do %>
            <img src="<%= "/post_images/#{@post.post_image}" %>">
          <% end %>
          <% end %>
      </div>
      <p>リンク: <%= link_to(@post.link, @post.link, target: :_blank) %>
      <p>
        <%= safe_join(@post.description.split("\n"),tag(:br)) %>
      </p>
      
      <div class="post-time">
        <%= @post.created_at %>
      </div>

      <% if false %>
      <% if Like.find_by(user_id: @current_user.id, post_id: @post.id) %>
        <%= link_to("/likes/#{@post.id}/destroy", {method: "post"}) do %>
          <span class="fa fa-heart like-btn-unlike"></span>
        <% end %>
      <% else %>
        <%= link_to("/likes/#{@post.id}/create", {method: "post"}) do %>
          <span class="fa fa-heart like-btn"></span>
        <% end %>
      <% end %>
      <% end %>

      <% if @post.user_id == @current_user.id %>
        <div class="post-menus">
          <%= link_to("編集", "/posts/#{@post.id}/edit") %>
          <%= link_to("削除", "/posts/#{@post.id}/destroy", {method: "post"}) %>
        </div>
      <% end %>
    </div>
  </div>
</div>